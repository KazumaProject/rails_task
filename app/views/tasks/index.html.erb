<h1>Tasks</h1>
<%= link_to 'new', new_task_path %>
<ul>
    <% @tasks.each do |task| %>
        <li>
            <%= check_box_tag '','' %>
            <%= task.title %>
            <%= link_to '[edit]', edit_task_path(task) %>
            <%= link_to '[delete]', task_path(task),
            data: {turbo_method: 'delete', turbo_confirm: 'Are you sure you want to delete?'} %>
        </li>
    <% end %>
